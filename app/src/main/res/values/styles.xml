<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- Main theme colors -->
        <!-- App's branding colors for action bar and others -->
        <!-- DrawerArrowStyle -->
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <!-- #43 set our parent theme to Theme.AppCompat.NoActionBar so the theme will be set no matter which
    version of Android is used. colorPrimary, colorPrimaryDark and colorAccent are the same as the version
    with android: in front of them. -->

    <style name="DrawerArrow" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/actionBarItems</item>
    </style>

    <style name="NavigationItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/navigation_item_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="robotoFont">Medium</item>
    </style>
    <!--#44 Set the gravity to match the center of the text with TextView. The text will be alligned
     with the center of the TextView-->
    <style name="Headline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@drawable/btn_text_drawable</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="robotoFont">Medium</item>
    </style>
    <!--The Button style is using the btn_text_drawable for it's color. Also set the right size, font and caps attr -->

    <style name="Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>

    </style>

</resources>
