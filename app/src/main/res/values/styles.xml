<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- Main theme colors -->
        <!-- App's branding colors for action bar and others -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="Headline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Button">
        // #2
        <item name="android:textColor">@drawable/btn_text_drawable</item>
        // #3
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="robotoFont">Medium</item>
    </style>
    <!--The Button style is using the btn_text_drawable for it's color. Also set the right size, font and caps attr -->

    <style name="Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>

    </style>

</resources>
