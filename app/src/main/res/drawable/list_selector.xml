<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--We are using the color black_26 here when the android state is pressed.
    *If that's not the case then we use the transparent color set in Android Studio.
    -->
    <item android:drawable="@color/black_26" android:state_pressed="true"/>
    <item android:drawable="@android:color/transparent"/>
</selector>





